<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_showuserinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.nedu.nedu_library.ShowuserinfoActivity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_style_stroke"
        android:padding="0.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lyName">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="姓名"
                android:gravity="center_vertical|center"
                android:background="@drawable/border_style_stroke"
                android:id="@+id/Name" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="马泽华"
                android:gravity="center_vertical|left"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/tvName" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/edName" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lySex">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="性别"
                android:gravity="center_vertical|center"
                android:background="@drawable/border_style_stroke"
                android:id="@+id/Sex" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="男"
                android:gravity="center_vertical|left"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/tvSex" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/edSex" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lyPhone">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="电话"
                android:gravity="center_vertical|center"
                android:background="@drawable/border_style_stroke"
                android:id="@+id/Phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="15948682400"
                android:gravity="center_vertical|left"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/tvPhone" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/edPhone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lyEmail">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="邮箱"
                android:gravity="center_vertical|center"
                android:background="@drawable/border_style_stroke"
                android:id="@+id/Email" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1224517808@qq.com"
                android:gravity="center_vertical|left"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/tvEmail" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/edEmail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/lyDepartment">

            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="院系"
                android:gravity="center_vertical|center"
                android:background="@drawable/border_style_stroke"
                android:id="@+id/Department" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="信息工程学院"
                android:gravity="center_vertical|left"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/tvDepartment" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/border_style_stroke"
                android:paddingLeft="5dp"
                android:id="@+id/edDepartment" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyBtn">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="编辑"/>

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="提交"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="取消"/>

    </LinearLayout>

</LinearLayout>
